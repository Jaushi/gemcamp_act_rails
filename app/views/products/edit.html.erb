<h1>Edit Product</h1>

<% if @product.errors.any? %>
    <div class="alert alert-danger">
        <h4>There were errors with your submission:</h4>
        <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @product, local: true do |form| %>
    <div class="mb-3">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :content, class: "form-label" %>
        <%= form.text_area :content, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :quantity, class: "form-label" %>
        <%= form.number_field :quantity, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :price, "Price (â‚±)", class: "form-label" %>
        <%= form.number_field :price, step: 0.01, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :available, class: "form-label" %>
        <%= form.check_box :available, class: "form-check-input" %>
    </div>
    <div class="mb-3">
        <%= form.label :released_at, class: "form-label" %>
        <%= form.datetime_select :released_at, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :discount, class: "form-label" %>
        <%= form.number_field :discount, step: 0.01, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :category_id, "Category", class: "form-label" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a Category" }, class: "form-control" %>
    </div>
    <%= form.submit 'Update Product', class: "btn btn-primary" %>
<% end %>